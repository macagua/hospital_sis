<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- security categories -->
    <record id="module_category_hospital" model="ir.module.category">
        <field name="name">Administrar Hospital</field>
        <field name="description">Categoria para Hospital</field>
        <field name="sequence">45</field>
    </record>

    <!-- security groups -->
    <record id="group_hospital_doctor" model="res.groups">
        <field name="name">Doctor</field>
        <field name="category_id" ref="module_category_hospital"/>
    </record>
    <record id="group_hospital_manager" model="res.groups">
        <field name="name">Administrador</field>
        <field name="category_id" ref="module_category_hospital"/>
        <field name="implied_ids" eval="[(4, ref('group_hospital_doctor'))]"/>
    </record>
    <record id="group_hospital_laboratorios" model="res.groups">
        <field name="name">Asistente de laboratorio</field>
        <field name="category_id" ref="module_category_hospital"/>
        <!--<field name="implied_ids" eval="[(4, ref('group_hospital_doctor'))]"/>-->
    </record>

    <!-- hospitals security rules -->
    <record id="hospitals_manager_record_rule" model="ir.rule">
        <field name="name">Puede ver todos los hospitales</field>
        <field ref="model_sis_hospital" name="model_id"/>
        <field name="domain_force">[]</field>
        <!-- You can attach this rule to a specific group, Or make it Global -->
        <field name="groups" eval="[(4, ref('group_hospital_manager'))]"/>
        <!--<field name="global" eval="1"/> -->
    </record>
    <record id="see_only_his_hospitals_record_rule" model="ir.rule">
        <field name="name">Puede ver solamente sus hospitales creados</field>
        <field ref="model_sis_laboratorios" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_doctor'))]"/>
    </record>

    <!-- especialidades security rules -->
    <record id="specialties_manager_record_rule" model="ir.rule">
        <field name="name">Puede ver todas las especialidades</field>
        <field ref="model_sis_especialidades" name="model_id"/>
        <field name="domain_force">[]</field>
        <field name="groups" eval="[(4, ref('group_hospital_manager'))]"/>
    </record>
    <record id="see_only_his_specialties_record_rule" model="ir.rule">
        <field name="name">Puede ver solamente sus especialidades creadas</field>
        <field ref="model_sis_especialidades" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_doctor'))]"/>
    </record>

    <!-- laboratorios security rules -->
    <record id="see_only_his_laboratorios_record_rule" model="ir.rule">
        <field name="name">Puede ver solamente sus laboratorios creados</field>
        <field ref="model_sis_laboratorios" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_doctor'))]"/>
    </record>

    <!-- consultas security rules -->
    <record id="see_only_his_consultas_record_rule" model="ir.rule">
        <field name="name">Puede ver solamente sus consultas creadas</field>
        <field ref="model_sis_consultas" name="model_id"/>
        <field name="domain_force">[('user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('group_hospital_doctor'))]"/>
    </record>
</odoo>
