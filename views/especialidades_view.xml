<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- especialidades form view -->
    <record id="sis_especialidades_form_view" model="ir.ui.view">
        <field name="name">sis_especialidades_form</field>
        <field name="model">sis.especialidades</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Especialidades">
                <sheet>
                    <group>
                        <field name="nombre"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- especialidades tree view -->
    <record id="sis_especialidades_tree_view" model="ir.ui.view">
        <field name="name">sis_especialidades_tree</field>
        <field name="model">sis.especialidades</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="Especialidades">
                <field name="nombre"/>
            </tree>
        </field>
    </record>

    <!-- especialidades actions window -->
    <record id="sis_especialidades_action" model="ir.actions.act_window">
        <field name="name">Especialidades</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sis.especialidades</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="help" type="html">
            <p class="oe_view_nocontent_create"> -->
                <!-- Add Text Here -->
            <!-- </p><p> -->
                <!-- More details about what a user can do with this object will be OK -->
            <!-- </p>
        </field> -->
    </record>

    <!-- especialidades menu -->
    <!-- This Menu Item will show at the 'sis_menu_mantenedor' parent
         menu and using the 'sis_especialidades_action' action. -->
    <menuitem id="menu_sis_mantenedor_especialidades" name="Especialidades" parent="sis_menu_mantenedor" action="sis_especialidades_action" sequence="10"/>

</odoo>
