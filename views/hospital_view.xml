<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- hospital form view -->
    <record id="sis_hospital_form_view" model="ir.ui.view">
        <field name="name">sis_hospital_form</field>
        <field name="model">sis.hospital</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="hospital">
                <sheet>
                    <group>
                        <field name="nombre"/>
                        <field name="country_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- hospital tree view -->
    <record id="sis_hospital_tree_view" model="ir.ui.view">
        <field name="name">sis_hospital_tree</field>
        <field name="model">sis.hospital</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree string="hospital">
                <field name="nombre"/>
                <field name="country_id"/>
            </tree>
        </field>
    </record>

    <!-- hospital actions window -->
    <record id="sis_hospital_action" model="ir.actions.act_window">
        <field name="name">Hospital</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sis.hospital</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
                ¡Su gestión de hospitales están vacío!
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
                Cree su primer registro de hospital, ¡Ahora!
            </p>
        </field>
    </record>

    <!-- hospital menu -->
    <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
    <menuitem id="sis_menu" name="Hospital" sequence="10"/>
    <!-- This Menu Item Must have a parent -->
    <menuitem id="sis_menu_mantenedor" name="Mantenedor" parent="sis_menu" sequence="10"/>
    <!-- This Menu Item must have a parent and an action -->
    <menuitem id="sis_menu_mantenedor_hospital" name="Hospital" parent="sis_menu_mantenedor" action="sis_hospital_action" sequence="10"/>

</odoo>
