<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- laboratorios form view -->
    <record id="sis_laboratorios_form_view" model="ir.ui.view">
        <field name="name">sis_laboratorios_form</field>
        <field name="model">sis.laboratorios</field>
        <field name="arch" type="xml">
            <form string="Laboratorios">
                <sheet>
                    <group>
                        <field name="nombre"/>
                    </group>
                    <group>
                        <field name="user_id"/>
                    </group>
                    <group>
                        <field name="hospital_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- laboratorios tree view -->
    <record id="sis_laboratorios_tree_view" model="ir.ui.view">
        <field name="name">sis_laboratorios_tree</field>
        <field name="model">sis.laboratorios</field>
        <field name="arch" type="xml">
            <tree string="Laboratorios">
                <field name="nombre"/>
                <field name="user_id"/>
                <field name="hospital_id"/>
            </tree>
        </field>
    </record>

    <!-- laboratorios actions window -->
    <record id="sis_laboratorios_action" model="ir.actions.act_window">
        <field name="name">Laboratorios</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sis.laboratorios</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Â¡Cree un laboratorio del hospital!
            </p>
            <p>
                Cree un laboratorio asociado a un hospital, para llevar un censo de los laboratorios disponibles en el hospital.
            </p>
        </field>
    </record>

    <!-- laboratorios menu -->
    <!-- This Menu Item will show at the 'sis_menu_mantenedor' parent
         menu and using the 'sis_laboratorios_action' action. -->
    <menuitem id="menu_sis_mantenedor_laboratorios" name="Laboratorios" parent="sis_menu_mantenedor" action="sis_laboratorios_action" sequence="10"/>

</odoo>
